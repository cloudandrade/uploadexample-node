<body class="bg-gradient-primary">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">
       {{>messages}}
      <div class="col-xl-10 col-lg-12 col-md-9">
        <a href="/"><button class="btn btn-primary mt-2">Voltar para o site</button></a>

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block ">
                <img src="/img/pp.jpg" width="450px" height="530px">
              </div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <small>Plataforma</small>
                    <h1 class="h2 text-gray-900 mb-4">MeetOn</h1>
                  </div>
                  <form class="user" action="/users/login" method="POST">
                    <div class="form-group">
                      <input type="email" id="email" name="email" class="form-control form-control-user"  placeholder="Insira seu email...">
                    </div>
                    <div class="form-group">
                      <input type="password" id="password" name="password" class="form-control form-control-user" placeholder="Senha">
                    </div>              
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <input type="checkbox" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Lembrar-me</label>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                  </form>            
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

</body>

