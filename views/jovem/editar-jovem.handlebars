<head>
  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
  <!-- Custom styles for this template-->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>

{{>dashboard}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content fluid">
        {{>dashboard-top}}
  
  <div class="container-fluid">

<!--Conteúdo da página ficará aqui-->


 <div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          
          <div class="col-lg-12">
            <div class="p-4">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Edição de dados do Jovem</h1>
              </div>
              <form action="#" method="POST" class="user">
                 <input type="hidden" value="{{jovem._id}}" name="id">
                <div class="form-group">
                  <div class="row ">
                  <input type="text" name="nome" id="nome"  value="{{jovem.nome}}" class="form-control form-ajust30 form-control-user" placeholder="Nome Completo*">
                
                <label class="mt-3 ml-2">Idade*:</label>
                  <input type="number" name="idade" id="idade" value="{{jovem.idade}}" class="form-control form-ajust6 form-control-user" placeholder="">
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                   <input type="text" name="cmis" id="cmis" value="{{jovem.cmis}}" class="form-control form-ajust20 form-control-user" placeholder="cmis">
              
                  <input type="text" name="telefone" id="telefone"  value="{{jovem.telefone}}" class="form-control form-ajust15 form-control-user" placeholder="Telefone*">
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                  <label class="label ml-3 ">Estaca:*</label>
                    <select class="select" name="estaca" id="estaca">
                        <option value="Estaca Salvador" selected>Estaca Salvador</option>
                        <option value="Estaca Salvador Norte">Estaca Salvador Norte</option>
                        <option value="Estaca Imbuí">Estaca Imbuí</option>
                        <option value="Estaca Liberdade">Estaca Liberdade</option>
                    </select>
              
                  <div>
                  <label class="label">Sexo*:</label>
                  <input type="radio" name="sexo" value="M"> Masculino
                  <input type="radio" name="sexo" value="F"> Feminino
                  </div>
               
                  <input type="text" name="ala" id="" class="form-control form-ajust20 form-control-user" placeholder="Ala">

                  <label>Companhia:</label>
                  <select name="companhia" class="custom-select" required>
                  {{#each companhias}}
                  <option value="{{_id}}">{{nome}}</option>
                  {{else}}
                  <option value="0">Nenhuma categoria registrada</option>
                  {{/each}}
              </select>
                </div>
            </div>
            <button type="submit" id="" class=" btn btn-custom  btn-primary ">Editar</button>
                
              </form>
              
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>





<!--FIM do Conteúdo da página-->

        </div>    
      </div>
    </div>

{{>dashboard-bottom}}

  <!-- Bootstrap core JavaScript-->
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="/js/jquery.easing.min.js"></script>
  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>
</body>

